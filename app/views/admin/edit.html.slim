.container
	- unless flash[:notice].blank?
		.alert.alert-danger
			= flash[:notice]
	h1 Edit Article
	= form_for(@article, url: update_admin_path) do |f|
		= f.hidden_field :id
		= f.hidden_field :user_id, value: current_user.id
		.fieldgrp
			= f.label :title
			= f.text_field :title, class: "form-control", placeholder: 'Blog Title'
		.fieldgrp
			= f.label :address
			= f.text_field :address, class: "form-control", placeholder: 'Vanity Address (REQUIRED)'
		br
		= f.text_area :body, class: 'ckeditor'
		br
		br
		= f.label :status
		br
		.input-group.radio
			= f.radio_button :status, 1
			= f.label "Published"
		.input-group.radio
			= f.radio_button :status, 2
			= f.label "Preview"
		input-group.radio
			= f.radio_button :status, 0
			= f.label "Un-Published"
		.fieldgrp.submit
			= f.submit "Submit", class: "btn-lg btn-primary"